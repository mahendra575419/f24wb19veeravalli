extends layout

block content
  h1= title
  h1 Mahendra kumar Veeravalli
  p Welcome to my Home
  a(href="/instrument") Search result instrument <br>
  button(type="button", class="btn btn-outline-info", onclick="boost()") Sample Button
  div(id="boost") Add in extra.

  script.
    let value = 0;
    let amt = 3;
   
    function boost() {
      amt += 1;
      value += amt;
      document.getElementById("boost").innerText = `Boosted ${value} by ${amt}.`;
    }
